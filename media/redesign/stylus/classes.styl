/* real page content displays */
.text-content {

  /* tables */
  table {
    border-collapse: collapse;
    border: solid #e0e0dc;
    border-width: 1px 0 0 1px;
  }

  td, th {
    border: solid #e0e0dc;
    border-width: 0 1px 1px 0;
    padding: 6px;
    text-align: start;
  }

  thead th {
    background: rgba(212, 221, 228, 0.5);
  }

  blockquote {
    padding: 0 25px;
    border-left: 5px solid #ccc;
    margin-bottom: content-block-margin;
  }

  /* lists */
  ul {
    list-style: disc;

    ul {
      list-style: circle;
    }
  }

  ul ul, ol ol, ul ol, ol ul {
    margin-bottom: 0;
    padding-top: 6px;
  }

  ul, ol {
    bidi-style(padding-left, (grid-spacing * 2), padding-right, 0);
    margin-bottom: content-block-margin;
  }

  ol {
    list-style-type: decimal;
  }

  li {
    padding-bottom: 6px;
  }
  prevent-last-child-spacing(li, padding-bottom);

  dt {
    font-style: normal;
    font-weight: bold;
  }

  dd {
    margin-bottom: content-block-margin;
    padding-left: grid-spacing;
  }
  
  /* code blocks */
  pre, code {
    font: 100% 'Courier New', 'Andale Mono', monospace;
  }

  code {
    font-weight: inherit;
  }

  pre {
    border: 0;
    background: #f6f6f2;
    padding: 15px;
    overflow: auto;
    margin-bottom: content-block-margin;
  }

  /* misc */
  caption {
    font-weight: bold;
  }
}
